<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>HowTo</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.name %></td>
        <td><%= step.description %></td>
        <td><%= step.howto_id %>
        <td><%= link_to 'Show', howto_step_path(@howto, step) %></td>
        <td><%= link_to 'Edit', edit_howto_step_path(@howto, step) %></td>
        <td><%= link_to 'Destroy', [@howto, step], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_howto_step_path(@howto) %>
